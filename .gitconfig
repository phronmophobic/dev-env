[core]
	excludesfile = /Users/adrian/.gitignore
	editor = emacs-23.3

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    s  = status -sb
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    ll = log --pretty=oneline --graph --abbrev-commit --decorate --topo-order
    pu = push -u origin HEAD
    xib = !git add -u Classes/*xib *.xcodeproj/project.pbxproj
    deladd = !git ls-files -d -z | xargs -0 git add -u
    newadd = !git ls-files -z --other --exclude-standard | xargs -0 git add 
    ui = !git ls-files -z --other --exclude-standard -d -m Resource/UIJson | xargs -0 git add -A
    sup = submodule update --init
    ls = ls-files
    amend = commit --amend
[user]
	name = Adrian Smith
	email = adrian@brooklynpacket.com

[diff "csv"]
        wordRegex="[^,]+"
        xfuncname = "^@keys.*$"
[branch]
	autosetuprebase = always
